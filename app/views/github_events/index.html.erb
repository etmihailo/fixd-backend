<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white rounded-xl shadow-md p-6 w-full max-w-sm">
    <h1 class="text-xl font-semibold text-center text-gray-800 mb-4">
      fixd backend index
    </h1>

    <%= form_with url: github_events_path, method: :post, local: true do |f| %>
      <div class="mb-4">
        <%= f.label :username, "Github Username", class: "block text-sm text-gray-700 mb-1" %>
        <%= f.text_field :username, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <%= f.submit "Fetch Github Events", class: "w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition" %>
    <% end %>
  </div>
</div>
